# Feature Voting System - Environment Configuration
# Copy this file to .env and fill in your values

# Project Configuration
PROJECT_NAME=feature-voting
ENVIRONMENT=dev
NODE_ENV=development

# Database Configuration
MYSQL_ROOT_PASSWORD=your-super-secure-root-password-here
MYSQL_DATABASE=feature_voting
MYSQL_USER=voting_user
MYSQL_PASSWORD=your-secure-user-password-here

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-256-bits-minimum
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# API Gateway Configuration
API_PORT=3000
CORS_ORIGIN=*
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Service Ports
USER_SERVICE_PORT=3001
FEATURE_SERVICE_PORT=3002
VOTING_SERVICE_PORT=3003
REPORTING_SERVICE_PORT=3004

# Service URLs (for Docker Swarm)
USER_SERVICE_URL=http://user-service:3001
FEATURE_SERVICE_URL=http://feature-service:3002
VOTING_SERVICE_URL=http://voting-service:3003
REPORTING_SERVICE_URL=http://reporting-service:3004

# Redis Configuration (optional)
REDIS_PASSWORD=your-redis-password-here
REDIS_URL=redis://redis:6379

# Security Configuration
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8
SESSION_TIMEOUT=3600

# Application Features
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_PASSWORD_RESET=true
ENABLE_RATE_LIMITING=true
ENABLE_AUDIT_LOGGING=true

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf

# Email Configuration (if email features enabled)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@votingapp.com
FROM_NAME=Feature Voting System

# Monitoring and Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_TRACKING=true

# Cache Configuration
CACHE_TTL=300
ENABLE_QUERY_CACHE=true

# Development Settings
ENABLE_SWAGGER=true
ENABLE_DEBUG_ROUTES=false
ENABLE_MOCK_DATA=true

# Production Settings (override for production)
# NODE_ENV=production
# LOG_LEVEL=warn
# ENABLE_DEBUG_ROUTES=false
# ENABLE_MOCK_DATA=false
# CORS_ORIGIN=https://yourdomain.com